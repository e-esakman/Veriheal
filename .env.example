# VeriHeal Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# RECLAIM PROTOCOL CONFIGURATION (REQUIRED)
# =============================================================================
# Get these from: https://dev.reclaimprotocol.org/
EXPO_PUBLIC_RECLAIM_APP_ID="your_reclaim_app_id_here"
EXPO_PUBLIC_RECLAIM_APP_SECRET="your_reclaim_app_secret_here"

# =============================================================================
# BLOCKCHAIN CONFIGURATION (REQUIRED)
# =============================================================================
# Deploy the DocuStore contract and get the address
EXPO_PUBLIC_DOCUSTORE_CONTRACT_ADDRESS="your_contract_address_here"

# =============================================================================
# XION WALLET CONFIGURATION (OPTIONAL - defaults provided)
# =============================================================================
# XION Testnet RPC endpoint
EXPO_PUBLIC_RPC_URL="https://rpc.xion-testnet-2.burnt.com:443"

# XION Testnet REST API endpoint
EXPO_PUBLIC_REST_URL="https://api.xion-testnet-2.burnt.com:443"

# Gas price for transactions
EXPO_PUBLIC_GAS_PRICE="0.001uxion"

# Treasury contract address (optional)
EXPO_PUBLIC_TREASURY="xion13jetl8j9kcgsva86l08kpmy8nsnzysyxs06j4s69c6f7ywu7q36q4k5smc"

# Deep link callback URL for wallet connection
EXPO_PUBLIC_CALLBACK_URL="veriheal://callback"

# =============================================================================
# RECLAIM PROVIDER IDS (OPTIONAL - defaults provided)
# =============================================================================
# These are pre-configured for healthcare providers
EXPO_PUBLIC_RECLAIM_PROVIDER_ID_1="provider_id_for_aiims_patna"
EXPO_PUBLIC_RECLAIM_PROVIDER_ID_2="provider_id_for_american_medical_academy"
EXPO_PUBLIC_RECLAIM_PROVIDER_ID_3="provider_id_for_buraydah_college"
EXPO_PUBLIC_RECLAIM_PROVIDER_ID_4="provider_id_for_inaya_medical_college"